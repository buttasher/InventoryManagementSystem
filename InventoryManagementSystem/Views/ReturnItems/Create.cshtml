@model InventoryManagementSystem.Models.Returnitem

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_cashierlayout.cshtml";
}

<div class="page-header">
    <div class="page-title">
        <h4>Add Item</h4>
        <h6>Create new return item</h6>
    </div>
</div>


<div class="card">
    <div class="card-body">
        <form asp-action="Create" class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-lg-3 col-sm-6 col-12">
                <div class="form-group">
                    <label asp-for="ReturnQuantity"></label>
                    <input asp-for="ReturnQuantity" type="number" class="form-control" />
                    <span asp-validation-for="ReturnQuantity"></span>
                </div>
            </div>
            <div class="col-lg-3 col-sm-6 col-12">
                <div class="form-group">
                    <label asp-for="ReturnReason"></label>
                    <input asp-for="ReturnReason" class="form-control" />
                    <span asp-validation-for="ReturnReason"></span>
                </div>
            </div>


            <div class="col-lg-3 col-sm-6 col-12">
                <div class="form-group">
                    <label asp-for="ReturnDate"></label>
                    <input asp-for="ReturnDate" type="date" class="form-control" />
                    <span asp-validation-for="ReturnDate"></span>
                </div>
            </div>


            <div class="col-lg-3 col-sm-6 col-12">
                <div class="form-group">
                    <label asp-for="ProductId"></label>
                    <select asp-for="ProductId" asp-items="ViewBag.ProductId" class="form-control"></select>
                    <span asp-validation-for="ProductId"></span>
                </div>
            </div>
            <div class="col-lg-3 col-sm-6 col-12">
                <div class="form-group">
                    <label asp-for="TransactionId"></label>
                    <select asp-for="TransactionId" asp-items="ViewBag.TransactionId" class="form-control" ></select>
                    <span asp-validation-for="TransactionId"></span>
                </div>
            </div>


            <div class="col-lg-12">
                <input type="submit" value="Create" class="btn btn-submit me-2" />
                <a asp-controller="POS" asp-action="Index" class="btn btn-cancel">Back</a>
            </div>
        </form>
    </div>
</div>