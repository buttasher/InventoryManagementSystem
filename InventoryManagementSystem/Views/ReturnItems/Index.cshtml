@model IEnumerable<InventoryManagementSystem.Models.Returnitem>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_masterlayout.cshtml";
}

<div class="page-header">
    <div class="page-title">
        <h4>Return Item List</h4>
        <h6>Manage your Return items</h6>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <div class="table-top">
            <div class="search-set">
                <div class="search-input">
                    <a class="btn btn-searchset">
                        <img src="~/img/icons/search-white.svg" alt="img">
                    </a>
                </div>
            </div>
            <div class="wordset">
                <ul>
                    <li>
                        <a data-bs-toggle="tooltip" data-bs-placement="top" title="pdf">
                            <img src="~/img/icons/pdf.svg" alt="img">
                        </a>
                    </li>
                    <li>
                        <a data-bs-toggle="tooltip" data-bs-placement="top" title="excel">
                            <img src="~/img/icons/excel.svg" alt="img">
                        </a>
                    </li>
                    <li>
                        <a data-bs-toggle="tooltip" data-bs-placement="top" title="print">
                            <img src="~/img/icons/printer.svg" alt="img">
                        </a>
                    </li>
                </ul>
            </div>
        </div>


        <div class="table-responsive">
            <table class="table datanew">
                <thead>
                    <tr>
                        <th>Return Quantity</th>
                        <th>Return Reason</th>
                        <th>Return Date </th>
                        <th>Product Id</th>
                        <th>Transaction Id</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ReturnQuantity)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ReturnReason)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ReturnDate)
                            </td>
           
                            <td>
                                @Html.DisplayFor(modelItem => item.Product.ProductId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Transaction.TransactionId)
                            </td>
                            <td>
                                <a class="me-3" asp-action="Edit" asp-route-id="@item.ReturnItemsId"><img src="~/img/icons/edit.svg" alt="img"></a> |
                                <a class="me-3" asp-action="Details" asp-route-id="@item.ReturnItemsId"><img src="~/img/icons/eye.svg" alt="img"></a> |
                                <a asp-action="Delete" asp-route-id="@item.ReturnItemsId"><img src="~/img/icons/delete.svg" alt="img"></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>