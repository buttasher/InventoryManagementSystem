@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>

    <link rel="shortcut icon" type="image/x-icon" href="~/Images/Logo-shortform.png">
    <link rel="stylesheet" href="~/css/login.css" />
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
</head>

<body>
    <div id="global-loader">
        <div class="whirly-loader"> </div>
    </div>

    <div class="container-fluid vh-100 d-flex align-items-center justify-content-center bg-light">
        <div class="row shadow-lg w-75 bg-white rounded">
            <!-- Left Section -->
            <div class="col-md-6 p-4 d-flex align-items-center justify-content-center left-section">
                <img src="~/img/Login-Image.jpg" alt="Illustration" class="img-fluid" style="max-height: 400px" />
            </div>

            <!-- Right Section -->
            <div class="col-md-6 p-4">
                <div class="text-center">
                    <img src="~/img/Logo-new.png" alt="Logo" style="width: 150px; height: 150px" />
                </div>

                @if (!string.IsNullOrEmpty(ViewBag.Error))
                {
                    <div class="alert alert-danger text-center">@ViewBag.Error</div>
                }

                <!-- ✅ Updated Form with POST -->
                <form asp-controller="Account" asp-action="Login" method="post">
                    <!-- Email Input -->
                    <div class="mb-3">
                        <label for="email" class="form-label">Email/Phone Number</label>
                        <input type="email" class="form-control bg-light" name="Email" placeholder="admin@gmail.com" required />
                    </div>

                    <!-- Password Input -->
                    <div class="mb-3 position-relative">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" class="form-control bg-light" name="Password" placeholder="Enter Password" required />
                    </div>

                    <!-- Submit Button -->
                    <div class="d-grid">
                        <button type="submit" class="btn btn-warning">Login</button>
                    </div>

                </form>
            </div>
        </div>
    </div>

    <script src="~/js/login.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
</body>

</html>
