
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>Login</title>

    <link rel="shortcut icon" type="image/x-icon" href="./Images/Logo-shortform Crop.png">

    <link rel="stylesheet" href="./assets/css/login.css" />

    <!-- bootstrap -->
    <link rel="stylesheet" href="~/css/bootstrap.min.css">

</head>

<body>
    <div id="global-loader">
        <div class="whirly-loader"> </div>
    </div>

    <div class="container-fluid vh-100 d-flex align-items-center justify-content-center bg-light">
        <div class="row shadow-lg w-75 bg-white rounded">
            <!-- Left Section -->
            <div class="col-md-6 p-4 d-flex align-items-center justify-content-center left-section">
                <img src="~/img/Login-Image.jpg" alt="Illustration" class="img-fluid" style="max-height: 400px" />
            </div>

            <!-- Right Section -->
            <div class="col-md-6 p-4">
                <div class="text-center">
                    <img src="~/img/Logo-new.png" alt="Logo" style="width: 150px; height: 150px" />
                </div>
                <form>
                    <!-- Email Input -->
                    <div class="mb-3">
                        <label for="email" class="form-label">Email/Phone Number</label>
                        <input type="email" class="form-control bg-light" id="email" placeholder="admin@gmail.com" />
                    </div>

                    <!-- Password Input -->
                    <div class="mb-3 position-relative">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" class="form-control bg-light" id="password" placeholder="Enter Password" />
                    </div>

                    <!-- Submit Button -->
                    <div class="d-grid">
                        <a type="submit" asp-controller="Admin" asp-action="Index" class="btn btn-warning">Login</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="./assets/js/login.js"></script>
    <!-- bootstrap -->
    <script src="~/js/bootstrap.bundle.min.js"></script>
</body>

</html>