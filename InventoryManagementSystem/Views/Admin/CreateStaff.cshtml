@model InventoryManagementSystem.Models.User
@{
    ViewData["Title"] = "CreateCashier";
    Layout = "~/Views/Shared/_masterlayout.cshtml";
}

<div class="page-header">
    <div class="page-title">
        <h4>User Management</h4>
        <h6>Add/Update User</h6>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <form class="row" method="post" action="CreateStaff">
            <div class="col-lg-3 col-sm-6 col-12">
                <div class="form-group">
                    <label asp-for="Email">Email</label>
                    <input asp-for="Email" type="text">
                    <span asp-validation-for="Email"></span>
                </div>
            </div>
            <div class="col-lg-3 col-sm-6 col-12">
                <div class="form-group">
                    <label asp-for="FullName">Full Name</label>
                    <input asp-for="FullName" type="text">
                    <span asp-validation-for="FullName"></span>
                </div>
            </div>
            <div class="col-lg-3 col-sm-6 col-12">
                <div class="form-group">
                    <label asp-for="Password">Password</label>
                    <div class="pass-group">
                        <input type="password" class="pass-input" asp-for="Password">
                        <span asp-validation-for="Password"></span>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-sm-6 col-12">
                <div class="form-group">
                    <label asp-for="PhoneNumber">Phone Number</label>
                    <input asp-for="PhoneNumber" type="text">
                    <span asp-validation-for="PhoneNumber"></span>
                </div>
            </div>
          
            <div class="col-lg-12">
                <input class="btn btn-submit me-2" type="submit"/>
                <a asp-action="ManageUsers" class="btn btn-cancel">Cancel</a>
            </div>
        </form>
    </div>
</div>
