@model InventoryManagementSystem.Models.User

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_masterlayout.cshtml";
}

<h1>Edit</h1>

<h4>User</h4>
<hr />

<div class="card">
    <div class="card-body">
        <form asp-action="Edit" class="row">
            <div asp-validation-summary="ModelOnly" />
            <input type="hidden" asp-for="UserId" />
            <div class=" col-lg-3 col-sm-6 col-12">
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" type="text">
                    <span asp-validation-for="Email"></span>
                </div>
            </div>
            <div class="col-lg-3 col-sm-6 col-12">
                <div class="form-group">
                    <label asp-for="FullName"></label>
                    <select asp-for="FullName" class="form-control"></select>
                    <span asp-validation-for="FullName"></span>
                </div>
            </div>
            <div class="col-lg-3 col-sm-6 col-12">
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" />
                    <span asp-validation-for="Password"></span>
                </div>
            </div>
            <div class="col-lg-3 col-sm-6 col-12">
                <div class="form-group">
                    <label asp-for="PhoneNumber"></label>
                    <input asp-for="PhoneNumber" class="form-control" type="number" />
                    <span asp-validation-for="PhoneNumber"></span>
                </div>
            </div>
            <div class="col-lg-3 col-sm-6 col-12">
                <div class="form-group">
                    <label asp-for="Role"></label>
                    <input asp-for="Role" />
                    <span asp-validation-for="Role"></span>
                </div>
            </div>
            <div class="col-lg-3 col-sm-6 col-12">
                <div class="form-group">
                    <label asp-for="CreatedAt"></label>
                    <input asp-for="CreatedAt" type="date" class="form-control" />
                    <span asp-validation-for="CreatedAt"></span>
                </div>
            </div>

          
            <div class="col-lg-12">
                <input class="btn btn-submit me-2" type="submit" value="Save"></input>
                <a asp-action="ManageUsers" class="btn btn-cancel">Back to List</a>
            </div>

        </form>
    </div>
</div>


