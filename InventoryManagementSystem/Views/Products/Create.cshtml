@model InventoryManagementSystem.Models.Product

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_masterlayout.cshtml";
}

<div class="page-header">
    <div class="page-title">
        <h4>Add Item</h4>
        <h6>Create new item</h6>
    </div>
</div>


<div class="card">
    <div class="card-body">
        <form asp-action="Create" class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-lg-3 col-sm-6 col-12">
                <div class="form-group">
                    <label asp-for="ItemName"></label>
                    <input asp-for="ItemName" />
                    <span asp-validation-for="ItemName"></span>
                </div>
            </div>

            <div class="col-lg-3 col-sm-6 col-12">
                <div class="form-group">
                    <label asp-for="CategoryId"></label>
                    <select asp-for="CategoryId" asp-items="ViewBag.CategoryId" class="form-control"></select>
                    <span asp-validation-for="CategoryId"></span>
                </div>
            </div>

            <div class="col-lg-3 col-sm-6 col-12">
                <div class="form-group">
                    <label asp-for="Brand"></label>
                    <input asp-for="Brand" />
                    <span asp-validation-for="Brand"></span>
                </div>
            </div>
            <div class="col-lg-3 col-sm-6 col-12">
                <div class="form-group">
                    <label asp-for="Price"></label>
                    <input asp-for="Price" class="form-" />
                    <span asp-validation-for="Price"></span>
                </div>
            </div>
            <div class="col-lg-3 col-sm-6 col-12">
                <div class="form-group">
                    <label asp-for="Unit"></label>
                    <input asp-for="Unit" />
                    <span asp-validation-for="Unit"></span>
                </div>
            </div>
            <div class="col-lg-3 col-sm-6 col-12">
                <div class="form-group">
                    <label asp-for="Quantity"></label>
                    <input asp-for="Quantity" class="form-control" />
                    <span asp-validation-for="Quantity"></span>
                </div>
            </div>
            <div class="col-lg-3 col-sm-6 col-12">
                <div class="form-group">
                    <label asp-for="ManufactureDate"></label>
                    <input asp-for="ManufactureDate" type="date" class="form-control" />
                    <span asp-validation-for="ManufactureDate"></span>
                </div>
            </div>
            <div class="col-lg-3 col-sm-6 col-12">
                <div class="form-group">
                    <label asp-for="ExpiryDate"></label>
                    <input asp-for="ExpiryDate" type="date" class="form-control" />
                    <span asp-validation-for="ExpiryDate"></span>
                </div>
            </div>
            <div class="col-lg-3 col-sm-6 col-12">
                <div class="form-group">
                    <label asp-for="CreatedAt"></label>
                    <input asp-for="CreatedAt" type="date" class="form-control" />
                    <span asp-validation-for="CreatedAt"></span>
                </div>
            </div>




            <div class="col-lg-12">
                <input type="submit" value="Create" class="btn btn-submit me-2" />
                <a asp-action="Index" class="btn btn-cancel">Back to List</a>
            </div>
        </form>
    </div>
</div>