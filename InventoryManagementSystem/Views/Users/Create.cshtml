@model InventoryManagementSystem.Models.User

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_masterlayout.cshtml";
}

<div class="page-header">
    <div class="page-title">
        <h4>User Management</h4>
        <h6>Add/Update User</h6>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <form class="row" asp-action="Create">
            <div class="col-lg-3 col-sm-6 col-12">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" />
                    <span asp-validation-for="Email"></span>
                </div>
            </div>
            <div class="col-lg-3 col-sm-6 col-12">
                <div class="form-group">
                    <label asp-for="FullName"></label>
                    <input asp-for="FullName" />
                    <span asp-validation-for="FullName"></span>
                </div>
            </div>
            <div class="col-lg-3 col-sm-6 col-12">
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" />
                    <span asp-validation-for="Password"></span>
                </div>
            </div>
            <div class="col-lg-3 col-sm-6 col-12">
                <div class="form-group">
                    <label asp-for="PhoneNumber"></label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber"></span>
                </div>
            </div>

            <div class="col-lg-3 col-sm-6 col-12">
                <div class="form-group">
                    <label asp-for="Role"></label>
                    <input asp-for="Role" class="form-control" />
                    <span asp-validation-for="Role"></span>
                </div>
            </div>

            <div class="col-lg-3 col-sm-6 col-12">
                <label asp-for="CreatedAt"></label>
                <input asp-for="CreatedAt" type="date" class="form-control" />
                <span asp-validation-for="CreatedAt"></span>
            </div>
           
            <div class="col-lg-12 mt-3">
                <input type="submit" value="Create" class="btn btn-submit me-2" />
                <a asp-action="Index" class="btn btn-cancel">Back to List</a>
            </div>
        </form>
    </div>
</div>