@model InventoryManagementSystem.Models.Customer

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_cashierlayout.cshtml";
}

<div class="page-header">
    <div class="page-title">
        <h4>Customer Management</h4>
        <h6>Add/Update Customer</h6>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <form class="row" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-lg-3 col-sm-6 col-12">
                <div class="form-group">
                    <label asp-for="FullName"></label>
                    <input asp-for="FullName" type="text">
                    <span asp-validation-for="FullName"></span>
                </div>
            </div>
            <div class="col-lg-3 col-sm-6 col-12">
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" type="text">
                    <span asp-validation-for="Email"></span>
                </div>
            </div>
            <div class="col-lg-3 col-sm-6 col-12">
                <div class="form-group">
                    <label asp-for="ContactNumer">Contact Number</label>
                    <input asp-for="ContactNumer" class="form-control" type="number">
                    <span asp-validation-for="ContactNumer"></span>
                </div>
            </div>
            <div class="col-lg-3 col-sm-6 col-12">
                <div class="form-group">
                    <label asp-for="Age"></label>
                    <input asp-for="Age" type="text">
                    <span asp-validation-for="Age"></span>
                </div>
            </div>
            <div class="col-lg-3 col-sm-6 col-12">
                <div class="form-group">
                    <label asp-for="CreatedDate"></label>
                    <input asp-for="CreatedDate" type="date" class="form-control">
                    <span asp-validation-for="CreatedDate"></span>
                </div>
            </div>

            <div class="col-lg-12">
                <input class="btn btn-submit me-2" type="submit" value="Create" />
                <a asp-controller="POS" asp-action="Index" class="btn btn-cancel">Cancel</a>
            </div>
        </form>
    </div>
</div>

